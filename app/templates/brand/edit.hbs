<div class="floating-window">
  <h1>Brand : {{name}}</h1>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li class="active"><a href="#brand_edit" role="tab" data-toggle="tab">Main</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane fade in active" id="brand_edit">
      <div class="panel panel-primary">
        <div class="panel-body">
          <div class="form-group">
            <label for="modelName">Name</label>
            {{input value=name classNames='form-control' id='modelName'}}
          </div>
          <div class="form-group">
            <label for="modelLogo">Logo (url)</label>
            {{input value=logo classNames='form-control' id='modelLogo'}}
          </div>
          <div class="form-group">
            <label for="modelDescription">Description</label>
            {{textarea value=description classNames='form-control' id='modelDescription' rows='10'}}
          </div> 
        </div>
      </div>
    </div>
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Update</button>
  <button class="btn btn-warning" {{action 'cancel'}}>Cancel</button>

  {{outlet}}
</div>
